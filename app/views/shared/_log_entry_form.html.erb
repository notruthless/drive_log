<%= form_for @log_entry do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <% nowTime = Time.now %>
   <div class=”field_container”>
			<%= f.label :start_time %>
			<%= f.datetime_select :start_time, 
			         :default => nowTime,
							:prompt => true, 
							:order => [:day, :month, :year, :hour, :minute] %>
			<%#= f.datetime_select :start_time, 
			# this should do exactly what I want
			         :default => nowTime,
							:prompt => {:hour => "Start Hour", :minute => "Start Minute"}, 
							:order => [:day, :month, :year, :hour, :minute] %>
      <%# = f.datetime_select :start_time,  
         :default => nowTime,
         # this suggested solution looks nice but generates random values when submitted
         :prompt => { :hour => "Start Hour", :minute => "Start Minute", 
                     :year => nowTime.year, :month => nowTime.strftime("%B"), :day => nowTime.day} %>
		</div>
   <div class=”field_container”>
			<%= f.label :end_time %>
			<%= f.datetime_select:end_time, 
							:prompt => true, 
							:default => nowTime,  
							:order => [:day, :month, :year, :hour, :minute] %>
		</div>
    <%= f.label :night %>
    <%= f.check_box :night %>
    <br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>


