<%= form_for @log_entry do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :start_time %>
    <%= f.text_field :start_time %> <br />
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
    <%= f.label :night %>?
    <%= f.check_box :night %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>